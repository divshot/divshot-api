{
  "name": "divshot-api",
  "version": "0.7.0",
  "description": "Wrapper for the Divshot api",
  "main": "lib/divshot.js",
  "scripts": {
    "test": "npm run lint && mocha test/ --recursive --reporter spec",
    "lint": "jshint lib/",
    "build": "npm test && npm run build-standalone && npm run build-angular",
    "build-angular": "build/angular.js",
    "build-standalone": "build/standalone.js"
  },
  "pre-commit": [
    "test"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/divshot/divshot-api.git"
  },
  "author": "Divshot",
  "license": "BSD",
  "bugs": {
    "url": "https://github.com/divshot/divshot-api/issues"
  },
  "devDependencies": {
    "sinon": "1.7.x",
    "mocksy": "0.1.x",
    "mocha": "1.18.x",
    "expect.js": "0.3.x",
    "jshint": "2.4.x",
    "ngmin": "0.4.x",
    "browserify": "3.x.x",
    "minify": "0.2.x",
    "Base64": "0.2.x",
    "pre-commit": "0.0.4"
  },
  "dependencies": {
    "rapper": "0.8.x",
    "url-join": "0.0.1",
    "Base64": "0.2.x"
  },
  "jshintConfig": {
    "expr": true,
    "curly": false,
    "eqeqeq": true,
    "immed": true,
    "latedef": false,
    "newcap": true,
    "noarg": true,
    "sub": true,
    "undef": true,
    "unused": false,
    "boss": true,
    "eqnull": true,
    "node": true,
    "laxbreak": true,
    "globals": {
      "require": true,
      "module": true,
      "exports": true,
      "it": true,
      "describe": true,
      "beforeEach": true,
      "afterEach": true,
      "chai": true,
      "Regex": true,
      "btoa": true,
      "atob": true,
      "window": true,
      "document": true,
      "angular": true
    }
  }
}
